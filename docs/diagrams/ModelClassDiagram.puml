@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyCatalog <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Interface ReadOnlyUserPrefs <<Interface>>
Class Catalog
Class BorrowerRecords
Class LoanRecords
Class ReadOnlyCatalog
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs
Class GuiSettings
Class UserSettings

Package Book {
Class Book
Class Title
Class Author
Class SerialNumber
Class Loan
Class UniqueBookList
}

Package Borrower {
Class BorrowersList
Class Borrower
Class Name
Class Phone
Class Email
Class BorrowerId
Class LoanList
}

Package Loan {
Class Loan
Class ListOfAllLoans
Class LoanId
BorrowerId -- SerialNumber
(BorrowerId, SerialNumber) .. Loan
Class LocalDate
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

Catalog .up.|> ReadOnlyCatalog

UserPrefs *--> "1" GuiSettings
UserPrefs *--> "1" UserSettings

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" Catalog
ModelManager o--> "1" LoanRecords
ModelManager o--> "1" BorrowerRecords
ModelManager o--> "0..1" Borrower : serves >
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

Catalog *--> "1" UniqueBookList
UniqueBookList o--> "*" Book
Book *--> "*" Tag
Book *--> "1" Title
Book *--> "1" Author
Book *--> "1" SerialNumber

BorrowerRecords *--> "1" BorrowersList
BorrowersList o--> "*" Borrower
Borrower *--> "1" Name
Borrower *--> "1" Phone
Borrower *--> "1" Email
Borrower *--> "1" BorrowerId
Borrower *--> "1" LoanList

LoanList *--> "*" Loan
LoanRecords *--> "1" ListOfAllLoans
Loan *--> "1" LoanId
Loan *--> "2" LocalDate


Catalog -[hidden]> LoanRecords
LoanRecords -[hidden]> BorrowerRecords
LoanList -[hidden]right> Name


ModelManager -->"1" Book : filtered list
@enduml
