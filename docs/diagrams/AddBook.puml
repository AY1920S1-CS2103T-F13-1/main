@startuml
!include style.puml

participant "User" as User USER_COLOR
participant ":UI" as UI LOGIC_COLOR
participant ":Logic" as Logic LOGIC_COLOR
participant ":Model" as Model LOGIC_COLOR
participant ":Storage" as Storage LOGIC_COLOR

User -> UI : add t/Animal Farm a/George
activate UI

UI -> Logic : execute("add Animal Farm")
activate Logic

Logic -> Model : addBook(animalFarm)
activate Model
Model --> Logic
deactivate Model

Logic -> Storage : saveCatalog(updatedCatalog)
activate Storage
Storage -> Storage : saveToLocalFile
Storage --> Logic
deactivate Storage

Logic --> UI
deactivate Logic

UI --> User
deactivate UI
@enduml
