<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="borrowerPanel" spacing="5.0" style="-fx-background-color: #d8dae3#d8dae3;" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <Label fx:id="name" text="\$name" />
      <Label fx:id="borrowerId" text="\$borrowerId" />
      <Label fx:id="feesOutstanding" text="\$feesOutstanding" />
      <ListView fx:id="loanListView" VBox.vgrow="ALWAYS" />
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
